        <class-a>cz.muni.ics.digilaw.domain.Periodical</class-a>
        <class-b>cz.muni.ics.dspace5.metadata.MetadataWrapper</class-b>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.title">
            <a>titleMain</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.title.alternative">
