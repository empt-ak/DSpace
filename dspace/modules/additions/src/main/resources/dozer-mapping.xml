<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>
    
    <mapping>
        <class-a>cz.muni.ics.digilaw.domain.Volume</class-a>
        <class-b>cz.muni.ics.dspace5.metadata.MetadataWrapper</class-b>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.title">
            <a>volumeName</a>
            <b>metadata</b>
        </field>
		<!--
		<field custom-converter-id="simpleconverter" custom-converter-param="dc.title">
			<a>title</a>
			<b>metadata</b>
		</field>
		-->
    </mapping>   
    
    <mapping>
        <class-a>cz.muni.ics.digilaw.domain.ArticleMeta</class-a>
        <class-b>cz.muni.ics.dspace5.metadata.MetadataWrapper</class-b>
        
        <field custom-converter-id="simpleconverter" custom-converter-param="muni.section">
            <a>section</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="muni.positionnumber">
            <a>number</a>
            <b>metadata</b>
        </field>
    </mapping>
</mappings> 
