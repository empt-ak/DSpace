<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>
  
    <mapping>
        <class-a>cz.muni.ics.digilib.domain.Periodical</class-a>
        <class-b>cz.muni.ics.dspace5.metadata.MetadataWrapper</class-b>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.title">
            <a>titleMain</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.title.alternative">
            <a>titleVariant</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="seriesconverter" custom-converter-param="dc.relation.ispartofseries">
            <a>series</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.identifier.issn">
            <a>issn</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="composedconverter" custom-converter-param="dc.description.abstract">
            <a>description</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.rights">
            <a>copyright</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.language">
            <a>language</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.publisher">
            <a>publisher</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dcterms.accrualPeriodicity">
            <a>periodicity</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.description.uri">
            <a>homeURL</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="prevnextconverter" custom-converter-param="dc.relation.replaces">
            <a>previousSeries</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="prevnextconverter" custom-converter-param="dc.relation.isreplacedby">
            <a>nextSeries</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="muni.categorytype">
            <a>category</a>
            <b>metadata</b>
        </field>        
    </mapping> 
    
    <mapping>
        <class-a>cz.muni.ics.digilib.domain.Volume</class-a>
        <class-b>cz.muni.ics.dspace5.metadata.MetadataWrapper</class-b>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.title">
            <a>volumeName</a>
            <b>metadata</b>
        </field>
    </mapping> 
    
    <mapping>
        <class-a>cz.muni.ics.digilib.domain.Issue</class-a>
        <class-b>cz.muni.ics.dspace5.metadata.MetadataWrapper</class-b>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.title">
            <a>issueName</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.identifier.isbn">
            <a>isbn</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.identifier.issn">
            <a>issn</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.date">
            <a>years</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.date.issued">
            <a>publYear</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.date.issued">
            <a>publicationDate</a>
            <b>metadata</b>
        </field>        
    </mapping> 
    
    <mapping>
        <class-a>cz.muni.ics.digilib.domain.Article</class-a>
        <class-b>cz.muni.ics.dspace5.metadata.MetadataWrapper</class-b>        
        <field custom-converter-id="composedconverter" custom-converter-param="dc.title">
            <a>title</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="authorconverter" custom-converter-param="dc.contributor.author">
            <a>author</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="contributorconverter" custom-converter-param="dc.contributor">
            <a>contributor</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.language">
            <a>language</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.format.extent">
            <a>pagination</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="composedconverter" custom-converter-param="dc.description.abstract">
            <a>description</a>
            <b>metadata</b>
        </field>        
        <field custom-converter-id="composedconverter" custom-converter-param="dc.subject">
            <a>keyword</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.identifier.doi">
            <a>doi</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.identifier.doi">
            <a>embargoEndDate</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="relateddocumentconverter" custom-converter-param="dc.relation">
            <a>link</a>
            <b>metadata</b>
        </field>  
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.rights">
            <a>rightsLicense</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.rights.uri">
            <a>rightsURI</a>
            <b>metadata</b>
        </field>
        <field custom-converter-id="simpleconverter" custom-converter-param="dc.type">
            <a>articleType</a>
            <b>metadata</b>
        </field>
    </mapping>
</mappings> 