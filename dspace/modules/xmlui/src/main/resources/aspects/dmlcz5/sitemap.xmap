<!-- 
The XML Test Aspect is just a simple playground for viewing XML source 
in various configurations.

-->
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
    <map:components>

        <map:transformers>
            <map:transformer name="MainAspect" src="cz.muni.ics.dmlcz5.aspects.MainAspect" />
            <map:transformer name="CommunityAspect" src="cz.muni.ics.dmlcz5.aspects.CommunityAspect" />
            <map:transformer name="CollectionAspect" src="cz.muni.ics.dmlcz5.aspects.CollectionAspect" />
            <map:transformer name="ItemAspect" src="cz.muni.ics.dmlcz5.aspects.ItemAspect" />
            <map:transformer name="AboutUsAspect" src="cz.muni.ics.dmlcz5.aspects.statik.AboutUsAspect" />
        </map:transformers>
  
    </map:components>
    <map:pipelines>
        <map:pipeline>

            <map:generate/>

            <map:match pattern="">
                <map:transform type="MainAspect" />
            </map:match>
            
            <map:match pattern="aboutus">
                <map:transform type="AboutUsAspect" />
            </map:match>
            
            <map:match pattern="handle/*/*">
                <map:transform type="CommunityAspect" />
                <map:transform type="CollectionAspect" />
                <map:transform type="ItemAspect" />
            </map:match>

            <map:serialize type="xml"/>

        </map:pipeline>
    </map:pipelines>
</map:sitemap>
